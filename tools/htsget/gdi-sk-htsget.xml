<tool id="gdi-sk-htsget" name="GDI Starter Kit htsget" version="0.1.0+galaxy7" python_template_version="3.5">
    <requirements>
        <requirement type="package" version="0.2.6">htsget</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        env; 
        htsget --bearer-token '$token' --output '$output1' http://'$server'/reads/s3/'$file'
    ]]></command>
    <inputs>
        <param type="data" name="token" format="txt" />
        <param type="text" name="server" label="Server endpoint (don't change in GDI starter kit)" value="server:3000"/>
        <param type="text" name="file" label="File name, e.g. 'EGAD74900000101/dummy_gdi.eu/NA12878.bam'" />
    </inputs>
    <outputs>
        <data name="output1" label="Retrieved file" format="dat" />
    </outputs>
    <tests>
      <test>
        <param name="token" value="token.txt"/>
        <param name="file" value="EGAD74900000101/dummy_gdi.eu/NA12878.bam"/>
        <output name="output1" file="NA12878-retrieved.bam"/>
      </test>
    </tests>
    <help><![CDATA[
        TODO: Fill in help.
    ]]></help>
</tool>
